<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/all_home_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

  <LinearLayout
      android:layout_width="@dimen/input_newform_ll_w"
      android:layout_height="@dimen/input_newform_ll_h"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/input_newform_ll_mt"
      android:background="@drawable/input_newform_ll_bg"
      android:orientation="vertical" >
	 <TextView 
	     android:layout_width="100dp"
	     android:layout_height="26dp"
	     android:layout_marginTop="44dp"
	     android:layout_marginLeft="30dp"
	     android:gravity="center_vertical"
	     android:text="物流公司"
	     android:textColor="#ffffff"/> 
      <Spinner 
          android:id="@+id/input_newform_company_sp"
          android:layout_width="151dp"
          android:layout_height="31dp"
          android:layout_marginTop="1dp"
          android:paddingLeft="25dp"
          android:layout_gravity="center_horizontal"
          android:prompt="@string/company_name_prompt"
          style="@style/input_newform_sp_style"/>
     
      <TextView 
	     android:layout_width="100dp"
	     android:layout_height="26dp"
	     android:layout_marginTop="10dp"
	     android:layout_marginLeft="30dp"
	     android:gravity="center_vertical"
	     android:text="货单类型"
	     android:textColor="#ffffff"/>
      <LinearLayout 
          android:layout_width="293dp"
          android:layout_height="30dp"
          android:layout_marginTop="1dp"
          android:layout_gravity="center_horizontal"
          android:orientation="horizontal">
         
          <TextView 
              android:id="@+id/input_newform_type_pt"
              android:layout_width="69dp"
              android:layout_height="24dp"
              android:layout_marginTop="3.6dp"
              android:layout_marginLeft="5dp"
              android:gravity="center"
              android:background="@drawable/input_newform_type_up"
              android:text="@string/type_name_pt"/>
          <TextView 
              android:id="@+id/input_newform_type_jj"
              android:layout_width="69dp"
              android:layout_height="24dp"
              android:layout_marginTop="3.6dp"
              android:layout_marginLeft="4dp"
              android:gravity="center"
              android:background="@drawable/input_newform_type_up"
              android:text="@string/type_name_jj"/>
          <TextView 
              android:id="@+id/input_newform_type_tc"
              android:layout_width="69dp"
              android:layout_height="24dp"
              android:layout_marginTop="3.6dp"
              android:layout_marginLeft="3dp"
              android:gravity="center"
              android:background="@drawable/input_newform_type_up"
              android:text="@string/type_name_tc"/>
          <TextView 
              android:id="@+id/input_newform_type_zl"
              android:layout_width="69dp"
              android:layout_height="24dp"
              android:layout_marginTop="3.6dp"
              android:layout_marginLeft="4dp"
              android:gravity="center"
              android:background="@drawable/input_newform_type_up"
              android:text="@string/type_name_zl"/>
          
      </LinearLayout>
      
      <TextView 
	     android:layout_width="100dp"
	     android:layout_height="26dp"
	     android:layout_marginTop="10dp"
	     android:layout_marginLeft="30dp"
	     android:gravity="center_vertical"
	     android:text="货单编号"
	     android:textColor="#ffffff"/>
      <LinearLayout 
         android:layout_width="293dp"
          android:layout_height="30dp"
          android:layout_marginTop="1dp"
          android:layout_gravity="center_horizontal">
         
	     <EditText 
	          android:id="@+id/input_newform_order_et"
	          android:layout_width="200dp"
	          android:layout_height="30dp"
	          android:paddingLeft="10dp"
	          android:background="@drawable/input_newform_et_bg"
	          android:singleLine="true"
	          android:hint="必填项"/>
	     <Button 
	         android:id="@+id/input_newform_order_bt"
	         android:layout_width="88dp"
	         android:layout_height="30dp"
	         android:layout_marginLeft="5dp"
	         android:gravity="center"
	         android:text="扫描"
	         android:background="@drawable/input_newform_order_selector"/>
     </LinearLayout>
      
      <TextView 
	     android:layout_width="100dp"
	     android:layout_height="26dp"
	     android:layout_marginTop="10dp"
	     android:layout_marginLeft="30dp"
	     android:gravity="center_vertical"
	     android:text="手机号"
	     android:textColor="#ffffff"/>
      <EditText 
         android:id="@+id/input_newform_tel_et"
         android:layout_width="293dp"
         android:layout_height="30dp"
         android:layout_marginTop="1dp"
         android:paddingLeft="10dp"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/input_newform_et_bg"
         android:singleLine="true"
         android:hint="必填项"
         android:inputType="number"/>
      
      <TextView 
	     android:layout_width="100dp"
	     android:layout_height="26dp"
	     android:layout_marginTop="10dp"
	     android:layout_marginLeft="30dp"
	     android:gravity="center_vertical"
	     android:text="货柜编号"
	     android:textColor="#ffffff"/>
      <EditText 
          android:id="@+id/input_newform_shelf_et"
          android:layout_width="293dp"
          android:layout_height="30dp"
          android:layout_marginTop="1dp"
          android:paddingLeft="10dp"
          android:layout_gravity="center_horizontal"
          android:background="@drawable/input_newform_et_bg"
          android:singleLine="true"
          android:hint="必填项"
          android:inputType="number"/>
      
      
      
      <TextView 
	     android:layout_width="100dp"
	     android:layout_height="26dp"
	     android:layout_marginTop="10dp"
	     android:layout_marginLeft="30dp"
	     android:gravity="center_vertical"
	     android:text="收件人姓名"
	     android:textColor="#ffffff"/>
      <EditText 
          android:id="@+id/input_newform_name_et"
          android:layout_width="293dp"
          android:layout_height="30dp"
          android:layout_marginTop="1dp"
          android:paddingLeft="10dp"
          android:layout_gravity="center_horizontal"
          android:background="@drawable/input_newform_et_bg"
          android:singleLine="true"
          android:maxLength="12"
          android:hint="非必填项"/>
      
      </LinearLayout>
      
      <Button 
	      android:id="@+id/input_newform_save_bt"
	      android:layout_width="@dimen/input_newform_save_bt_w"
	      android:layout_height="@dimen/input_newform_save_bt_h"
	      android:layout_marginTop="@dimen/input_newform_save_bt_mt"
	      android:layout_gravity="center_horizontal"
	      android:text="@string/save_and_send_message"
	      style="@style/input_newform_save_style"/>

	  
</LinearLayout>